{
  "name": "mycapm",
  "version": "1.0.0",
  "description": "A simple CAP project.",
  "repository": "<Add your repository here>",
  "license": "UNLICENSED",
  "private": true,
  "dependencies": {
    "@cap-js-community/odata-v2-adapter": "^1.13.7",
    "@sap/cds": "^8.5.0",
    "@sap/hana-client": "^2.22.32",
    "@sap/xssec": "^4",
    "axios": "^1.7.5",
    "express": "^4",
    "npm": "^10.9.0",
    "passport": "^0.7.0"
  },
  "scripts": {
    "start": "cds-serve",
    "watch-mycapm_fiori": "cds watch --open mycapm_fiori/webapp/index.html?sap-ui-xx-viewCache=false",
    "undeploy": "cf undeploy mycapm --delete-services --delete-service-keys --delete-service-brokers",
    "build": "rimraf resources mta_archives && mbt build --mtar archive",
    "deploy": "cf deploy mta_archives/archive.mtar --retries 1"
  },
  "cds": {
    "build": {
      "tasks": [
        {
          "for": "hana",
          "dest": "../db"
        },
        {
          "for": "node-cf"
        }
      ]
    },
    "hana": {
      "deploy-format": "hdbtable"
    },
    "server": {
      "index": true
    },
    "requires": {
      "db": {
        "kind": "hana"
      },
      "uaa": {
        "kind": "xsuaa"
      },
      "auth": {
        "[production]": {
          "strategy": "JWT"
        },
        "[development]": {
          "strategy": "mock",
          "users": {
            "mohammed": {
              "password": "welcome",
              "roles": [
                "Admin"
              ],
              "userAttributes": {
                "Gender": [
                  "$UNRESTRICTED"
                ]
              }
            },
            "Bousalem": {
              "password": "welcome11",
              "roles": [
                "Viewer"
              ],
              "userAttributes": {
                "Gender": [
                  "M"
                ]
              }
            }
          }
        }
      }
    }
  },
  "devDependencies": {
    "@sap/hdi-deploy": "^5.3.2",
    "rimraf": "^5.0.5"
  },
  "sapux": [
    "app/mycapm_fiori"
  ]
}
